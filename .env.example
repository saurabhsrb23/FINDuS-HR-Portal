# ─── Database ────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://donehr:donehr@postgres:5432/donehr

# ─── Cache ────────────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ─── Security ─────────────────────────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-random-64-char-hex-string
ADMIN_JWT_SECRET=change-this-to-a-different-random-64-char-hex-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ─── AI (Groq) ────────────────────────────────────────────────────────────────
# Get your free key at https://console.groq.com
GROQ_API_KEY=gsk_your_groq_api_key_here

# ─── Email (optional — only needed for email verification / password reset) ───
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASSWORD=your-app-password

# ─── Frontend → Backend URLs ──────────────────────────────────────────────────
# Backend is exposed on port 8001 externally
NEXT_PUBLIC_API_URL=http://localhost:8001
NEXT_PUBLIC_WS_URL=ws://localhost:8001
FRONTEND_URL=http://localhost:3000

# ─── Observability (optional) ─────────────────────────────────────────────────
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# ─── Runtime ──────────────────────────────────────────────────────────────────
ENVIRONMENT=development
